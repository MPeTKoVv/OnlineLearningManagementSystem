@using LearningSystem.Web.ViewModels.Teacher
@model BecomeTeacherFormModel
@{
    ViewData["Title"] = "Become a Teacher";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="SubmitTeacherRequest" method="post">
            <h2 class="text-center">Apply to Become a Teacher</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <!-- Phone Number -->
            <div class="form-floating mb-3">
                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                <label asp-for="PhoneNumber">Phone Number</label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <!-- Short Biography -->
            <div class="form-floating mb-3">
                <textarea asp-for="Biography" class="form-control" placeholder="Write a short bio about yourself" style="height: 150px;"></textarea>
                <label asp-for="Biography">Biography</label>
                <span asp-validation-for="Biography" class="text-danger"></span>
            </div>
                
            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100">Submit Application</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    @* <partial name="_NotificationScriptPartial" /> *@
}
