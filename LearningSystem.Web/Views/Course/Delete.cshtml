@model LearningSystem.Web.ViewModels.Course.CourseDeleteViewModel

@{
    ViewData["Title"] = "Delete Course";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Are you sure you want to delete this course?</h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <h5><strong>@Model.Name</strong></h5>
                        <p>Category: @Model.CategoryName</p>
                    </div>
                    <div class="text-center">
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" style="max-width: 300px;" />
                    </div>
                </div>
                <div class="card-footer text-center">
                    <form asp-controller="Course" asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger me-2">Yes, Delete</button>
                        <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
