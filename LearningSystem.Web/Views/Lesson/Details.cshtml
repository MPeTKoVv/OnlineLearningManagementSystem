@using LearningSystem.Web.ViewModels.Lesson
@model LessonViewModel

@{
    ViewData["Title"] = "Lesson Details";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="card mx-auto mt-4" style="max-width: 600px;">
    <div class="card-body">
        <h4 class="card-title">Lesson: @Model.Title</h4>
        <p class="card-text">This page shows details of the lesson.</p>
    </div>
    <div class="card-footer text-center">
        <a asp-controller="Lesson" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Edit Lesson</a>
        <a asp-controller="Lesson" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete Lesson</a>
    </div>
</div>
