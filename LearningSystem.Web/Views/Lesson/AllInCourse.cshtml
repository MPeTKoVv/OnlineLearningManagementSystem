@using LearningSystem.Web.ViewModels.Lesson
@model AllLessonsInCourseViewModel
@{
    ViewData["Title"] = "Lessons";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

@if (!Model.Lessons.Any())
{
    <h2 class="text-center">No lessons to this course!</h2>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Lessons.Count(); i++)
                {
                    var lesson = Model.Lessons.ElementAt(i);
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@lesson.Title</td>
                        <td>
                            <a asp-controller="Lesson" asp-action="Details" asp-route-id="@i" class="btn btn-info btn-sm me-2">
                                View
                            </a>
                            <a asp-controller="Lesson" asp-action="Edit" asp-route-id="@i" class="btn btn-warning btn-sm me-2">
                                Edit
                            </a>
                            <a asp-controller="Lesson" asp-action="Delete" asp-route-id="@i" class="btn btn-danger btn-sm">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<a asp-area="" asp-controller="Lesson" asp-action="Add" asp-route-courseId="@Model.CourseId"
   class="btn btn-primary btn-lg me-3">Add lesson</a>
