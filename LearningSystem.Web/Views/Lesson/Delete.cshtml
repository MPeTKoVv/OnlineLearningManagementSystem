@using LearningSystem.Web.ViewModels.Lesson
@model DeleteLessonViewModel

@{
    ViewData["Title"] = "Delete Lesson";
}

<h2 class="text-center text-danger">@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="alert alert-warning text-center">
            <h4>Are you sure you want to delete this lesson?</h4>
            <p>
                <strong>Title:</strong> @Model.Title
            </p>
        </div>

        <form method="post" asp-action="Delete" asp-controller="Lesson" asp-route-id="@Model.Id">
            <input asp-for="CourseId" type="hidden" />
            <input type="hidden" asp-for="Id" />
            <!-- Delete Confirmation Buttons -->
            <div class="text-center">
                <button type="submit" class="btn btn-danger me-2">Delete</button>
                <a asp-action="AllInCourse" asp-controller="Lesson" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
